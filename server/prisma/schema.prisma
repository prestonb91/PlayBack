generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id  Int @id @default(autoincrement())
  username String
  password String
}

model game_cards {
  id Int @id @default(autoincrement())
  user_id Int
  name String
  rating Int
  completion_status Boolean @default(false)
  review String
  console String
  reference_url String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}


